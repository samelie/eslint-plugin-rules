{
  "name": "@adddog/eslint-plugin-rules",
  "type": "module",
  "version": "0.0.13",
  "private": false,
  "homepage": "https://github.com/samelie/eslint-plugin-rules#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/samelie/eslint-plugin-rules.git"
  },
  "bugs": {
    "url": "https://github.com/samelie/eslint-plugin-rules/issues"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin"
  ],
  "exports": {
    ".": {
      "import": "./src/index.ts"
    }
  },
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">= 22",
    "pnpm": ">= 10",
    "npm": ">= 11"
  },
  "scripts": {
    "build": "unbuild",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "types": "tsc -p tsconfig.typecheck.json",
    "test": "vitest --watch=false",
    "prepublishOnly": "pnpm run lint && pnpm run types && pnpm run build",
    "prepack": "pnpm run prepublishOnly",
    "release": "bumpp --yes --no-push --no-tag --release patch",
    "dev": "tsx src/index.ts",
    "knip": "knip",
    "version:patch": "npm version patch --no-git-tag-version"
  },
  "peerDependencies": {
    "knip": "^5.64.3",
    "typescript": "^5.9.3",
    "vitest": ">=3.2.4"
  },
  "dependencies": {
    "@eslint/js": "^10.0.1"
  },
  "devDependencies": {
    "@adddog/monorepo-consistency": "workspace:*",
    "@adddog/vite": "workspace:*",
    "@antfu/eslint-config": "^7.4.3",
    "@typescript-eslint/parser": "^8.56.1",
    "@typescript-eslint/rule-tester": "^8.56.1",
    "@typescript-eslint/utils": "^8.56.1",
    "bumpp": "^10.4.1",
    "eslint": "^10.0.2",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1",
    "vitest": "^4.0.18"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "exports": {
      ".": {
        "import": {
          "types": "./dist/index.d.mts",
          "default": "./dist/index.mjs"
        },
        "require": {
          "types": "./dist/index.d.cts",
          "default": "./dist/index.cjs"
        }
      }
    },
    "main": "./dist/index.mjs",
    "types": "./dist/index.d.mts"
  }
}
